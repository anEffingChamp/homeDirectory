[color]
	branch      = always
	showbranch  = always
	status      = always
	ui          = always
[column]
    ui = auto
[commit]
    template = ~/.config/git/gitmessage
    verbose  = true
[core]
	compression = -1
	editor      = vim
    eol         = lf
    fsmonitor   = true
    pager       = less --quit-if-one-screen --ignore-case --status-column --long-prompt --squeeze-blank-lines
	symlinks    = true
	quotepath   = false
[diff]
    colorMoved = dimmed_zebra
	dirstat    = lines
	renames    = copy
[init]
	templatedir = ~/.config/git/initTemplate
[merge]
	tool      = vimdiff
	verbosity = 1
[push]
	default    = current
    followTags = true
[rebase]
	stat = true
[credential]
