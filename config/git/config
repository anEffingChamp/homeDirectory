[blame]
    coloring = highlightRecent
[branch]
    autoSetupMerge = always
    mergeOptions   = --strategy-option=ours --verbose --stat --log
[color]
    # I have always output, because I frequently pipe output to less.
    ui = always
[column]
    ui = always
[commit]
    template = ~/.config/git/gitmessage
    verbose  = true
[core]
    compression      = 9
    editor           = vim
    eol              = lf
    fsmonitor        = true
    pager            = less --quit-if-one-screen --ignore-case --status-column --long-prompt --squeeze-blank-lines
    sharedRepository = group
    symlinks         = true
    quotepath        = false
[diff]
    colorMoved = dimmed_zebra
    dirstat    = lines
    renames    = copy
[init]
    templatedir = ~/.config/git/initTemplate
[merge]
    tool      = vimdiff
    verbosity = 1
[push]
    default    = current
    followTags = true
[rebase]
    stat = true
